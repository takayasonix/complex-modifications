{
  "title": "undo // fnを押しながらz/shift+zを押すと、元に戻す/やり直すを送信する",
  "rules": [
    {
      "description": "undo // [fn]+[z] = [command+z]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            }
          },
          "to": [
            { "key_code": "z", "modifiers": ["left_command"] }
          ]
        }
      ]
    },
    {
      "description": "redo // [fn]+[shift]+[z] = [command]+[shift]+[z]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": ["fn", "shift"],
              "optional": ["any"]
            }
          },
          "to": [
            { "key_code": "z", "modifiers": ["left_command", "shift"] }
          ]
        }
      ]
    }
  ]
}
  
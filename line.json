{
    "title": "line // fnを押しながらu/i/o/pを押すと、文末/文頭まで移動/削除を送信する",
    "rules": [
        {
            "description": "line // [u]→[cmd+backspace]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "u",
                        "modifiers": { "mandatory": [ "fn" ] }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace",
                            "modifiers": [ "command" ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "line // [i]→[ctrl+a]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "i",
                        "modifiers": { "mandatory": [ "fn" ] }
                    },
                    "to": [
                        {
                            "key_code": "a",
                            "modifiers": [ "control" ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "line // [o]→[ctrl+e]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "o",
                        "modifiers": { "mandatory": [ "fn" ] }
                    },
                    "to": [
                        {
                            "key_code": "e",
                            "modifiers": [ "control" ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "line // [p]→[ctrl+k]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "p",
                        "modifiers": { "mandatory": [ "fn" ] }
                    },
                    "to": [
                        {
                            "key_code": "k",
                            "modifiers": [ "control" ]
                        }
                    ]
                }
            ]
        }
    ]
}
{
    "title": "main // fnを押しながらj/k/lを押すと、backspace/delete/enterを送信する",
    "rules": [
        {
            "description": "main // [fn]+[j]=[backspace]",
            "manipulators": [
                {
                    "from": {
                        "key_code": "j",
                        "modifiers": { "mandatory": [ "fn" ] }
                    },
                    "to": [
                        {"key_code": "backspace"}
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "main // [fn]+[k]=[delete]",
            "manipulators": [
                {
                    "from": {
                        "key_code": "k",
                        "modifiers": { "mandatory": [ "fn" ] }
                    },
                    "to": [
                        {"key_code": "delete"}
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "main // [fn]+[l]=[enter]",
            "manipulators": [
                {
                    "from": {
                        "key_code": "l",
                        "modifiers": { "mandatory": [ "fn" ] }
                    },
                    "to": [
                        {"key_code": "enter"}
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
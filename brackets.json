{
  "title": "brackets // left_shift/right_shiftを単押ししたとき、丸括弧を送信する",
  "rules": [
    {
      "description": "brackets // [single.left_shift]=[left_shift]+[9]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "lazy": true
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {"key_code": "9","modifiers": [ "left_shift" ]}
          ]
        }
      ]
    },
    {
      "description": "brackets // [single.right_shift]=[left_shift]+[0]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "lazy": true
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_if_alone": [
            {"key_code": "0","modifiers": [ "left_shift" ]}
          ]
        }
      ]
    }
  ]
}